<<widget "trinit_creature">>
	<<switch $args[0]>>
		<<case "parasite">>
			<<trinit_creatureParasite>>
		<<case "struggle">>
			<<trinit_creatureStruggle>>
		<<case "swarm">>
			<<trinit_creatureSwarm>>
		<<case "tentacle">>
			<<trinit_creatureTentacle>>
		<<case "vore">>
			<<trinit_creatureVore>>
		<<default>>
			<<trinit_creatureParasite>>
			<<trinit_creatureStruggle>>
			<<trinit_creatureSwarm>>
			<<trinit_creatureTentacle>>
			<<trinit_creatureVore>>
	<</switch>>
<</widget>>

